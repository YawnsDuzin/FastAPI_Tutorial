# ===========================================
# FastAPI Boilerplate Configuration
# ===========================================

# Application Settings
APP_NAME="FastAPI Boilerplate"
APP_VERSION="1.0.0"
DEBUG=true
SECRET_KEY="your-secret-key-change-this-in-production"

# ===========================================
# Database Configuration
# ===========================================
# Supported: postgresql, mysql, mariadb, sqlite
DB_TYPE=postgresql

# PostgreSQL (Default)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=fastapi_db

# MySQL/MariaDB (Uncomment if using)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=password
# DB_NAME=fastapi_db

# SQLite (Uncomment if using)
# DB_TYPE=sqlite
# SQLITE_FILE=./data/app.db

# ===========================================
# JWT Authentication Settings
# ===========================================
JWT_SECRET_KEY="your-jwt-secret-key-change-this"
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS Settings
# ===========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ===========================================
# Theme Settings
# ===========================================
DEFAULT_THEME=light
AVAILABLE_THEMES=["light","dark","blue","green"]
